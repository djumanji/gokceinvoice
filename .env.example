# ========================================
# DATABASE CONFIGURATION
# ========================================

# Local Development
# DATABASE_URL=postgresql://postgres:postgres@localhost:5433/invoicedb

# Replit (automatically set by Replit when you create a PostgreSQL database)
# DATABASE_URL=<automatically-set-by-replit>

# ========================================
# SESSION SECURITY (REQUIRED)
# ========================================

# CRITICAL: Generate a strong secret with: openssl rand -base64 32
# Never commit the actual secret to version control!
SESSION_SECRET=your-secret-key-here

# ========================================
# OAUTH CONFIGURATION (OPTIONAL)
# ========================================

# Google OAuth
# Get credentials from: https://console.cloud.google.com
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
# Local: http://localhost:5000/api/auth/google/callback
# Replit: https://your-repl-name.replit.app/api/auth/google/callback
GOOGLE_CALLBACK_URL=http://localhost:5000/api/auth/google/callback

# GitHub OAuth
# Get credentials from: https://github.com/settings/developers
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
# Local: http://localhost:5000/api/auth/github/callback
# Replit: https://your-repl-name.replit.app/api/auth/github/callback
GITHUB_CALLBACK_URL=http://localhost:5000/api/auth/github/callback

# ========================================
# ENVIRONMENT
# ========================================

# development | production
NODE_ENV=development

# Port (Replit uses 5000 internally)
PORT=5000
