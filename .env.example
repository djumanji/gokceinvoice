# ========================================
# DATABASE CONFIGURATION
# ========================================

# Local Development
# DATABASE_URL=postgresql://postgres:postgres@localhost:5433/invoicedb

# Replit (automatically set by Replit when you create a PostgreSQL database)
# DATABASE_URL=<automatically-set-by-replit>

# ========================================
# SESSION SECURITY (REQUIRED)
# ========================================

# CRITICAL: Generate a strong secret with: openssl rand -base64 32
# Never commit the actual secret to version control!
SESSION_SECRET=your-secret-key-here

# ========================================
# OAUTH CONFIGURATION (OPTIONAL)
# ========================================

# Google OAuth
# Get credentials from: https://console.cloud.google.com
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
# Local: http://localhost:5000/api/auth/google/callback
# Replit: https://your-repl-name.replit.app/api/auth/google/callback
GOOGLE_CALLBACK_URL=http://localhost:5000/api/auth/google/callback

# GitHub OAuth
# Get credentials from: https://github.com/settings/developers
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
# Local: http://localhost:5000/api/auth/github/callback
# Replit: https://your-repl-name.replit.app/api/auth/github/callback
GITHUB_CALLBACK_URL=http://localhost:5000/api/auth/github/callback

# ========================================
# ENVIRONMENT
# ========================================

# development | production
NODE_ENV=development

# Port (Replit uses 5000 internally)
PORT=5000

# ========================================
# AWS S3 CONFIGURATION (FOR RECEIPT UPLOADS)
# ========================================

# AWS Region
AWS_REGION=us-east-1

# AWS S3 Credentials (Create IAM user in AWS Console)
AWS_ACCESS_KEY_ID=your_access_key_id
AWS_SECRET_ACCESS_KEY=your_secret_access_key

# S3 Bucket Name
AWS_S3_BUCKET_NAME=your-bucket-name

# Optional: Custom CDN/Public URL (if using CloudFront or custom domain)
# AWS_S3_PUBLIC_URL=https://cdn.yourdomain.com

# ========================================
# ANALYTICS CONFIGURATION (OPTIONAL)
# ========================================

# Mixpanel
VITE_ENABLE_MIXPANEL=false
VITE_MIXPANEL_TOKEN=

# PostHog
VITE_ENABLE_POSTHOG=false
VITE_POSTHOG_KEY=
VITE_POSTHOG_HOST=https://us.i.posthog.com

# ========================================
# EMAIL CONFIGURATION (OPTIONAL)
# ========================================

# Resend API (for email verification and password reset)
# Get your API key from: https://resend.com/api-keys
RESEND_API_KEY=

# From email address - Use onboarding@resend.dev for testing
# For production, verify your domain at https://resend.com/domains and use your custom email
RESEND_FROM_EMAIL=onboarding@resend.dev

# Application domain (used in email links)
APP_DOMAIN=http://localhost:3000

